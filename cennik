  <script>
    let currentNick = localStorage.getItem('mcNick') || "";
    updateNickDisplay();

    function showNickForm(){
      hideAll();
      document.getElementById('nickForm').classList.remove('hidden');
    }
    function saveNick(){
      const val = document.getElementById('nickInput').value.trim();
      if(val){
        currentNick = val;
        localStorage.setItem('mcNick', val);
        updateNickDisplay();
        goHome();
      }
    }
    function updateNickDisplay(){
      const disp = document.getElementById('nickDisplay');
      if(currentNick){
        disp.textContent = currentNick;
        document.querySelectorAll('.nick').forEach(el => el.textContent = currentNick);
      } else {
        disp.textContent = "Wpisz sw√≥j nick";
      }
    }
    function hideAll(){
      document.getElementById('home').classList.add('hidden');
      document.getElementById('nickForm').classList.add('hidden');
      document.getElementById('rangi').classList.add('hidden');
      document.getElementById('klucze').classList.add('hidden');
    }
    function goHome(){
      hideAll();
      document.getElementById('home').classList.remove('hidden');
    }
    function goTo(section){
      if(!currentNick){
        showNickForm();
        return;
      }
      hideAll();
      document.getElementById(section).classList.remove('hidden');
    }
  </script>
